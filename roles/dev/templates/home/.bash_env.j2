# -*- mode: sh -*-

# Path settings
export PATH=${HOME}/.bin:${HOME}/.local/bin:${PATH}

# Uses gpg-agent for unlocking SSH
# (run ssh-add to add the SSH key to the gpg-agent)
export SSH_AGENT_PID=
export SSH_AUTH_SOCK=${XDG_RUNTIME_DIR}/gnupg/S.gpg-agent.ssh

# Terminal settings
export GREP_COLOR="4;33"
export CLICOLOR=auto
export TERM=xterm-256color
export GNUTERM=x11
export EDITOR=vim

# IRC settings (used by erc in emacs)
export IRCNICK={{ user.irc_nickname }}
export IRCNAME={{ user.full_name }}

# Org-mode settings
export ORG_AGENDA_INDEX_FILE=${HOME}/Dropbox/notes/index.org
