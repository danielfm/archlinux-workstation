[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
primary = ${xrdb:color5}
secondary = ${xrdb:color2}
alert = ${xrdb:color4}

[bar/top]
height = 24
width = 100%
bottom = false

border-bottom-size = 1
border-bottom-color = #ccc
background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3

padding-left = 2
padding-right = 2

module-margin-right = 5

font-0 = "Noto Sans:pixelsize=11;3"
font-1 = "icons:pixelsize=12;4"

modules-left = cpu memory temperature
modules-center = i3
modules-right = keyboard date

cursor-click = pointer
cursor-scroll = ns-resize

tray-position = right

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-foreground = ${colors.background}
label-mode-background = ${colors.alert}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-underline = ${colors.primary}
label-focused-padding = 5

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 5

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-underline = ${colors.secondary}
label-visible-padding = 5

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 5

[module/cpu]
type = internal/cpu
interval = 2

format =  <label>
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2

format =  <label>
label = %gb_used%

[module/date]
type = internal/date
interval = 5

date = %H:%M
date-alt = %a %Y-%m-%d %H:%M

label =  %date% %time%

[module/keyboard]
type = internal/xkeyboard

format =  <label-layout>

[module/temperature]
type = internal/temperature

thermal-zone = {{ system.polybar.temperature.thermal_zone }}
hwmon-path = {{ system.polybar.temperature.hwmon_path }}

format =  <label>
label = %temperature-c%

[module/xwindow]
type = internal/xwindow

format =  <label>
label = %title%

[settings]
screenchange-reload = true
